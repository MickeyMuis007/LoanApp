<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/darker_gray"
    android:paddingRight="@dimen/list_rows_paddingRight"
    android:paddingTop="@dimen/list_rows_paddingTop"
    android:paddingBottom="@dimen/list_rows_paddingBottom">

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/listRowsImageView"
        android:src="@drawable/logo"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/list_rows_marginLeft" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/list_rows_title"
        android:id="@+id/listRowsTitle"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/listRowsImageView"
        android:ellipsize="end"
        android:singleLine="true"
        android:layout_marginBottom="2dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This is the body, and its length is a abit long but this is all just for testing "
        android:id="@+id/listRowsBody"
        android:layout_toRightOf="@id/listRowsImageView"
        android:layout_below="@id/listRowsTitle"
        android:layout_alignParentRight="true"
        android:ellipsize="end"
        android:singleLine="true"
        />


</RelativeLayout>
